# key: widget
# name: Progressbar
# --
$1widget = awful.widget.progressbar()
$1widget:set_width(8)
$1widget:set_height(12)
$1widget:set_vertical(true)
$1widget:set_background_color("#494B4F")
$1widget:set_border_color(nil)
$1widget:set_color("#AECF96")
$1widget:set_gradient_colors({ "#AECF96", "#88A175", "#FF5656" })
vicious.register($1widget, vicious.widgets.$1, "$0", 13)