${if_mpd_playing}[${mpd_title} ${mpd_elapsed}/${mpd_length}]${endif} [${cpu cpu1}% ${cpu cpu2}% ${cpu cpu3}% ${cpu cpu4}% | $memperc%] ${if_up eth0}[down: ${downspeedf eth0}KiB up: ${upspeedf eth0}KiB]${endif} [${time %A, %d de %B, %Y %H:%M}]