#!/bin/bash
# Start all eve clients
pgrep -c 'eve\.(kaito|teiko|sanjo|shijo|meigo|gokku)' || ~/dev/bin/eve.launcher
pgrep -c eve.kaito || ~/dev/bin/eve.kaito &!
pgrep -c eve.teiko || ~/dev/bin/eve.teiko &!
#pgrep -c eve.sanjo || ~/dev/bin/eve.sanjo &!
#pgrep -c eve.shijo || ~/dev/bin/eve.shijo &!
#pgrep -c eve.meigo || ~/dev/bin/eve.meigo &!
#pgrep -c eve.gokku || ~/dev/bin/eve.gokku &!
# Evemon and pyfa:
pgrep -c pyfa || /usr/bin/pyfa &!
pgrep -c gtkevemon || gtkevemon &!
# And the market data uploader
pgrep -c emdu_console || exec emdu_console --add-eve '~/.eveonline/drive_c/users/chris/Local Settings/Application Data/CCP/EVE/' --enable-deletion
