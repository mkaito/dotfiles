export PAGER="less"
export READNULLCMD="$PAGER"
export EDITOR="emacsclient"
export VISUAL="emacsclient"
export ALTERNATE_EDITOR=””
export BROWSER="firefox"
export XTERM="~/dev/bin/terminal"
export TERMINAL="$XTERM"
export PERL_SIGNALS="unsafe"
export GOPATH="$HOME/dev/go"
export SUDO_EDITOR="emacsclient"

source /etc/zsh/zprofile
export PATH="$HOME/dev/bin:$GOPATH/bin:$HOME/perl5/bin:$HOME/.cabal/bin:$HOME/node_modules/.bin:$PATH"
export LEDGER_FILE="$HOME/media/sync/ledger/personal.ledger"

# Rbenv completion and functions
eval "$(rbenv init -)"

export PERL_LOCAL_LIB_ROOT="$HOME/perl5";
export PERL_MB_OPT="--install_base $HOME/perl5";
export PERL_MM_OPT="INSTALL_BASE=$HOME/perl5";
export PERL5LIB="$HOME/perl5/lib/perl5/x86_64-linux-thread-multi:$HOME/perl5/lib/perl5";
